@{
    ViewData["Title"] = "Home Page";
}
<br />
<form asp-action="Index" asp-controller="Home">
    <div class="col-lg-12" >Enter Product Model</div>
    <br/>
    <div class="col-lg-12">
        <input type="text" name="QRstring" id="QRstring" class="form-control" />
    </div>
    <br/>
    <div class="col-lg-12">
        <input type="submit" value="Generate QR Code" class="btn btn-primary" />
    </div>
</form>

@if (!string.IsNullOrEmpty(ViewBag.URL))
{
    <div class="col-lg-12">
        <img src="@ViewBag.URL"/>
    </div>
}
